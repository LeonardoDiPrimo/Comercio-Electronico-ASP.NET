@model ComercioElectronicoMvc.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";
}
<div>
    <h4>Detalles del Usuario</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    }

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cuilCuit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cuilCuit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.esEmpresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.esEmpresa)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditUser" asp-route-id="@Model.usuarioId">Editar Datos</a> |
    <a asp-action="UpdatePassword" asp-route-id="@Model.usuarioId">Actualizar Contraseña</a>
</div>
