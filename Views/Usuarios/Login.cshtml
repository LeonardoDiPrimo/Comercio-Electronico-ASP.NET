@model ComercioElectronicoMvc.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1>Iniciar sesión</h1>
    <hr />

    @if (@ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>@ViewData["ErrorMessage"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (@ViewData["AccountCreated"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <strong>@ViewData["AccountCreated"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["SessionExpired"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>@TempData["SessionExpired"]</strong>
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    }

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="FindAccount">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="mail" class="control-label"></label>
                    <input asp-for="mail" class="form-control" />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a asp-action="CreateUser">Registrarse</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


