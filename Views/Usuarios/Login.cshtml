@model ComercioElectronicoMvc.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1>Login</h1>
    <hr />

    @if (@ViewData["ErrorMessage"] != null)
    {
        <p style="color:red">@ViewData["ErrorMessage"]</p>
    }

    @{
        if (TempData["SessionExpired"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <strong>@TempData["SessionExpired"]</strong>
            </div>
        }
    }

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="FindAccount">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="dni" class="control-label"></label>
                    <input asp-for="dni" class="form-control" />
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a asp-action="CreateUser">Crear Usuario</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


