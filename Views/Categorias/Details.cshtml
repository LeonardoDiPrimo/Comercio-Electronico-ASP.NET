@model ComercioElectronicoMvc.Models.Categoria

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div>
    <h4>Detalle de la Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.deprecado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.deprecado)
        </dd>
    </dl>
</div>

<div>
    @if (!Model.deprecado)
    {
         <a class="text-primary" asp-action="Edit" asp-route-id="@Model.categoriaId">Editar</a>
         <label>|</label>
    }
    <a class="text-secondary" asp-action="Index">Volver</a>
</div>
