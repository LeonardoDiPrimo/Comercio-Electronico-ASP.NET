@model ComercioElectronicoMvc.Models.Categoria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div>
    <h4>Eliminar Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.deprecado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deprecado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="categoriaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
         <a class="text-secondary" asp-action="Index">Volver</a>
    </form>
</div>
